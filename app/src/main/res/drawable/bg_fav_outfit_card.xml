<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中态：浅底 + 描边 -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="@color/dc_surface" />
            <stroke
                android:width="1dp"
                android:color="@color/dc_text_primary" />
        </shape>
    </item>

    <!-- 默认：更轻的描边 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="@color/dc_surface" />
            <stroke
                android:width="1dp"
                android:color="@color/dc_divider" />
        </shape>
    </item>

</selector>
