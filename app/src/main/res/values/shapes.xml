<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 小圆角，用在小组件上，比如小按钮/小标签 -->
    <style name="Shape.DressCode.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- 中圆角，用在一般卡片 -->
    <style name="Shape.DressCode.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- 大圆角，用在大卡片、底部弹窗等 -->
    <style name="Shape.DressCode.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

</resources>
